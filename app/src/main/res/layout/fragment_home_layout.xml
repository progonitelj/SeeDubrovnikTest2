<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/welcomeImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/dbk_front"
                android:scaleType="fitXY"
                android:tint="#66000000" />


            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/welcomeImage"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/pureWhite"
                android:textSize="20sp"
                android:text="Welcome to Dubrovnik" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcomeImage"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/pureBlack"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/introText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleText"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/pureBlack"
                android:text="Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old." />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/introText"
                android:padding="10dp">

                <!--> Grid element 3x2 <-->
                <GridLayout
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:columnOrderPreserved="false"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"

                    >

                    <!--> Grid element 1:1 <-->
                    <android.support.v7.widget.CardView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card:cardElevation="10dp"
                        card:contentPadding="10dp"
                        card:cardCornerRadius="10dp"
                        android:layout_margin="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/img_atraction"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:textSize="20sp"
                                android:textColor="@color/pureBlack"
                                android:textAlignment="center"
                                android:text="Atractions" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <!--> Grid element 1:2 <-->
                    <android.support.v7.widget.CardView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card:cardElevation="10dp"
                        card:contentPadding="10dp"
                        card:cardCornerRadius="10dp"
                        android:layout_margin="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/img_beach"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:textSize="20sp"
                                android:textColor="@color/pureBlack"
                                android:textAlignment="center"
                                android:text="Beaches" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <!--> Grid element 1:1 <-->
                    <android.support.v7.widget.CardView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card:cardElevation="10dp"
                        card:contentPadding="10dp"
                        card:cardCornerRadius="10dp"
                        android:layout_margin="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/img_food"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:textColor="@color/pureBlack"
                                android:text="Food" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <!--> Grid element 1:2 <-->
                    <android.support.v7.widget.CardView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card:cardElevation="10dp"
                        card:contentPadding="10dp"
                        card:cardCornerRadius="10dp"
                        android:layout_margin="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/img_drink"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:textSize="20sp"
                                android:textColor="@color/pureBlack"
                                android:textAlignment="center"
                                android:text="Drinks" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <!--> Grid element 1:1 <-->
                    <android.support.v7.widget.CardView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card:cardElevation="10dp"
                        card:contentPadding="10dp"
                        card:cardCornerRadius="10dp"
                        android:layout_margin="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/img_transport"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:textSize="20sp"
                                android:textColor="@color/pureBlack"
                                android:textAlignment="center"
                                android:text="Transport" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <!--> Grid element 1:2 <-->
                    <android.support.v7.widget.CardView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card:cardElevation="10dp"
                        card:contentPadding="10dp"
                        card:cardCornerRadius="10dp"
                        android:layout_margin="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/img_emergency"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:textSize="20sp"
                                android:textColor="@color/pureBlack"
                                android:textAlignment="center"
                                android:text="Emergencies" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </GridLayout>

                <ImageView
                    android:id="@+id/aboutUsImage"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/grid"
                    android:src="@drawable/logo"
                    android:cropToPadding="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/aboutUsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/aboutUsImage"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/pureBlack"
                    android:text="About Us"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:id="@+id/aboutUsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/aboutUsTitle"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/pureBlack"
                    android:text="Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old."
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>