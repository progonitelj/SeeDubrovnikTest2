<?xml version="1.0" encoding="utf-8"?>
<!--//add this to every layout containing navigation -->
<android.support.v4.widget.DrawerLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    ><!--//add this to every layout containing navigation be sure to close it in the end of the document -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pureWight"
            tools:context=".WelcomeStartActivity">

            <RelativeLayout
                android:id="@+id/topContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/darkOrange">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:contentDescription="Header image"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/slogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="Welcomne to Dubrovnik!"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/startButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/slogan"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:onClick="onClickStart"
                    android:text="Start your jurney"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/opis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/startButton"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="40dp"
                    android:text="This is an app for easy and simple tours around the dubrovnik. Find all turistic atractive paces in a minute."
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

            </RelativeLayout>

            <android.support.v7.widget.GridLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:orientation="horizontal"
                android:layout_below="@+id/topContent"
                android:background="#000000"
                app:columnCount="2"
                app:rowCount="2"
                >
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:weightSum="100"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:background="#ffcc00"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_wb_sunny_black_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="20"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunni Areas"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:weightSum="100"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:background="#3377ff"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_info_outline_black_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="20"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunni Areas"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="100"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:background="#2db300"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_local_hospital_black_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="20"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunni Areas"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="100"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1"
                    android:background="#997300
"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_restaurant_black_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="20"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunni Areas"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        />

                </LinearLayout>


            </android.support.v7.widget.GridLayout>

            <LinearLayout
                android:id="@+id/mapLegend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grid"
                android:orientation="vertical"
                android:weightSum="100"
                >

                <ImageView
                    android:id="@+id/mapPic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mapdbk"
                    android:scaleType="fitXY"
                    android:layout_marginTop="5dp"
                    android:layout_weight="70"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:text="1) Lapad"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:text="2) Kantafig"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:text="3) Gruz"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:text="4) Old Town"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:text="5) Babin Kuk"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:text="7) Boninovo"
                    />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapLegend"
                android:background="#4D000000"
                >

                <TextView
                    android:id="@+id/about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:text="About us"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"
                    android:layout_below="@+id/about_us"

                    />



            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>


    <!--//add this to every layout containing navigation -->
    <android.support.design.widget.NavigationView
        android:id="@+id/view_nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/navigation_menu">


    </android.support.design.widget.NavigationView>
    <!--//add this to every layout containing navigation -->
</android.support.v4.widget.DrawerLayout>
    <!--//close it -->


